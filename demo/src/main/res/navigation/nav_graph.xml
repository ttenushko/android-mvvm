<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@+id/placesFragment">

    <action
        android:id="@+id/navigate_to_addPlaceFragment"
        app:destination="@id/addPlaceFragment"
        app:enterAnim="@anim/slide_in_right"
        app:exitAnim="@anim/slide_out_left"
        app:popEnterAnim="@anim/slide_in_left"
        app:popExitAnim="@anim/slide_out_right">
        <argument
            android:name="search"
            android:defaultValue="null" />
    </action>

    <fragment
        android:id="@+id/placesFragment"
        android:name="com.ttenushko.mvvm.demo.presentation.screen.places.PlacesFragment"
        android:label="@null">
        <action
            android:id="@+id/action_placesFragment_to_addPlaceFragment"
            app:destination="@id/addPlaceFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right">
            <argument
                android:name="search"
                android:defaultValue="null" />
        </action>
        <action
            android:id="@+id/action_placesFragment_to_placeDetailsFragment"
            app:destination="@id/placeDetailsFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>

    <fragment
        android:id="@+id/addPlaceFragment"
        android:name="com.ttenushko.mvvm.demo.presentation.screen.addplace.AddPlaceFragment"
        android:label="@null">
        <argument
            android:name="search"
            android:defaultValue="null"
            app:argType="string"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/placeDetailsFragment"
        android:name="com.ttenushko.mvvm.demo.presentation.screen.placedetails.PlaceDetailsFragment"
        android:label="@null" />

</navigation>